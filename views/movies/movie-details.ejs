<h2>Movie</h2>
<p>Title: <%=movie.title %></p>
<p>Genre: <%=movie.genre %></p>
<p>Plot: <%=movie.plot %></p>
<h2>Cast:</h2>
<% castOfMovie.forEach(actor => { %>
<div>
  <p>Name: <%= actor.name %></p>
  <p>Occupation: <%= actor.occupation %></p>
  <p>Catchphrase: <%= actor.catchPhrase%></p>
</div>

<% }) %>

<form action="/movies/<%= movie._id %>/delete" method="post">
  <button type="submit">Delete Movie</button>
</form>
<form action="/movies/<%= movie._id %>/edit" method="get">
  <button>Edit</button>
</form>
